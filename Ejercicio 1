#include <stdio.h>

int main()
{
    int hora;
    int minutos;    
    int segundos;

    printf("Por favor, introduzca la hora: ");
    scanf("%d", &hora);
    printf("\n");

    printf("Por favor, introduzca los minutos: ");
    scanf("%d", &minutos);
    printf("\n");

    printf("Por favor, introduzca los segundos: ");
    scanf("%d", &segundos);
    printf("\n");

    segundos = hora*3600 + minutos*60 + segundos;
    printf("Los segundos totales son : %d", segundos);
    
    return 0;
}
