#include <stdio.h>

int main()
{
    int numero1;
    int numero2;
    printf("Por favor, introduzca el primer número: ");
    scanf("%d", &numero1);
    printf("\n");
    printf("Por favor,introduzca el segundo número: ");
    scanf("%d", &numero2);
    if (numero2<numero1) {
        int aux = numero1;
        numero1 = numero2;
        numero2 = aux;
    }
    int i=numero1;
    int suma = 0;
    while (i <= numero2){
        suma = i + suma;
        i  = i + 1;  
    }
   
    printf("El total es: %d", suma);

    return 0;
}
